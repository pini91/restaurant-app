<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health&Taste</title>
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/restaurant.png"
    />
    <link rel="stylesheet" href="css/form.css" type="text/css">
    <script src="https://kit.fontawesome.com/e6f9fb07b2.js" crossorigin="anonymous"></script>
</head>
    <body>
      <section class="container">
        <header>Make a reservation</header>
        <form action="/bookForm/createReservation" class="form" method="POST">
          <div class="input-box">
            <label for="password">Name</label>
            <input type="text" id="password" name="password" placeholder="Enter  name" required/> 
          </div>
          <div class="input-box">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="Enter Email"  /><!--required-->
          </div>
          <div class="column">
            <div class="input-box">
              <label for="phoneNumber">Phone Number</label>
              <input type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==10) return false;"  id="phoneNumber" name="phoneNumber" placeholder="Enter phone" title="Ten digits code" required />
            </div>
            <div class="input-box">
              <label for="date">Date</label>
              <input type="date" required id="date" name="date" min="<%= currentDate %>" max="<%= maxDate %>" value="<%= currentDate %>" />
              <!-- <input type="date" required id="date" name="date" min=<%=currentDate%> max=<%=maxDate%> /> -->
            </div>
          </div>
          </div>
          <div class="column">
            <div class="select-box ">
              <select name="hours" id="hoursSelect">
                <option hidden required>Hour</option>
                <!-- Options will be dynamically inserted by JS -->
              </select>
            </div>
          </div>
        </div>
          <!-- <div class="input-box address"> -->
            <div class="column">
              <div class="select-box">
                <select name="partySize">
                  <option hidden >Party size</option> <!--required-->
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                  <option>6</option>
        
                </select>
              </div>
              <!-- <input type="text" placeholder="Your table" required /> -->
            </div>
            
          <button type="submit" value="Upload">Submit</button>
          <!-- <input type="submit"> -->
        </form>
      </section>
      <script src="js/index.js"></script>
    </body>
</html>

